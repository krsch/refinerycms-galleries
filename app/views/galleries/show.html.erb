<% content_for :stylesheets do %>
<%=stylesheet_link_tag 'slimbox2', :media => 'screen' %>
<%=javascript_include_tag :defaults, 'slimbox2' %>
<% end %>
<% content_for :body_content_title do %>
  <%= @gallery.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <ul>
    	<% @filenames.each do |filename| %>
    	<li> <%= link_to image_tag(@gallery.url_for(@gallery.thumb(filename))), @gallery.url_for(filename), :rel => 'lightbox-gallery' %>
	<% end %>
    </ul>
  </section>
<% end %>

<%= render :partial => "/shared/content_page" %>
